{
    "compilerOptions": {
      "target": "ES2020",
      "module": "commonjs",
      "lib": [
        "ES2020"
      ],
      "strict": true,
      "alwaysStrict": true,
      "esModuleInterop": true,
      "noImplicitAny": true,
      "noImplicitThis": true,
      "noUnusedLocals": true,
      "noUnusedParameters": true,
      "noImplicitReturns": true,
      "strictBindCallApply": true,
      "strictFunctionTypes": true,
      "strictNullChecks": true,
      "strictPropertyInitialization": true,
      "inlineSourceMap": true,
      "inlineSources": true,
      "typeRoots": [
        "./node_modules/@types"
      ],
      "outDir": "dist"
    },
    "exclude": [
      "node_modules",
      "./src/**/*.test.ts"
    ]
}